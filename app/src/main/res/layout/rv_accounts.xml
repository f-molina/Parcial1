<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
    >
        <TextView
                android:id="@+id/account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Super alimentos"
        />
        <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_black_24dp"
                android:layout_toEndOf="@id/account_title"
                android:layout_toRightOf="@id/account_title"
                android:layout_marginTop="75dp"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/abono_arrow"
                  android:text="abono"
                  android:layout_toEndOf="@id/arrow_right"
                  android:layout_toRightOf="@id/arrow_right"
                  android:layout_marginTop="75dp"
                  android:layout_marginLeft="30dp"

        />

        <ImageView
                android:id="@+id/arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/cargo_arrow"
                  android:text="cargo"
                  android:layout_toEndOf="@id/arrow_left"
                  android:layout_toRightOf="@id/arrow_left"
                  android:layout_marginTop="75dp"
                  android:layout_marginLeft="30dp"

        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/saldo_ammount"
                  android:text="$500"
                  android:layout_toEndOf="@id/arrow_right"
                  android:layout_toRightOf="@id/arrow_right"
                  android:layout_marginTop="75dp"
                  android:layout_marginLeft="150dp"

        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>